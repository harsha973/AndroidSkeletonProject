<resources>

    <style name="AppTheme.Widget.TextView" parent="@android:style/Widget.TextView">
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">@dimen/text_normal</item>
        <!--<item name="android:textColor">@color/text_black</item>-->
    </style>

    <style name="AppTheme.Widget.TextView.Small" parent="AppTheme.Widget.TextView">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <style name="AppTheme.Widget.TextView.Large" parent="AppTheme.Widget.TextView">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="AppTheme.Widget.TextView.XLarge" parent="AppTheme.Widget.TextView">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold" parent="@android:style/Widget.TextView">
        <item name="fontPath">fonts/Roboto-Medium.ttf</item>
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold.Large" parent="AppTheme.Widget.TextView.Bold">
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold.XLarge" parent="AppTheme.Widget.TextView.Bold">
        <item name="android:textSize">@dimen/text_xlarge</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold.XXLarge" parent="AppTheme.Widget.TextView.Bold">
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="AppTheme.Widget.TextView.Bold.Small" parent="AppTheme.Widget.TextView.Bold">
        <item name="android:textSize">@dimen/text_small</item>
    </style>

    <!--PROGRESS BAR-->
    <style name="AppTheme.Widget.ProgressBar" parent="@style/Widget.MaterialProgressBar.ProgressBar"/>

    <style name="AppTheme.Widget.ProgressBar.Small" parent="@style/Widget.MaterialProgressBar.ProgressBar.Small"/>

    <style name="AppTheme.Widget.ProgressBar.Large" parent="@style/Widget.MaterialProgressBar.ProgressBar.Large"/>

    <!--BUTTON STYLE-->
    <style name="AppTheme.Widget.Button.Default" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/selectable_btn_accent</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <style name="AppTheme.Widget.Button.Dark" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/selectable_btn_accent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:minWidth">@dimen/button_min_width</item>
    </style>

    <!--END BUTTON STYLE-->

    <!--EDIT TEXT STYLE-->

    <style name="AppTheme.EditTextStyle" parent="@style/Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_edittext_with_border</item>
        <item name="android:padding">@dimen/padding_standard</item>
        <!--<item name="android:button">@drawable/checkbox_selector</item>-->
        <!--<item name="android:textColor">@color/text_black</item>-->
        <!--<item name="android:textColorHint">@color/text_med_grey</item>-->
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <!-- END EDIT TEXT STYLE-->

    <!--Dialog-->
    <style name="CommonAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:gravity">center_horizontal</item>
    </style>

</resources>
